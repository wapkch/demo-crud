<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.democrud.mapper.CompanyMapper">

    <resultMap id="companyUser" type="com.example.democrud.entity.Company">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="userList" ofType="com.example.democrud.entity.User">
            <result property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="age" column="age"/>
            <result property="email" column="email"/>
        </collection>
    </resultMap>

    <select id="selectById" resultMap="companyUser">
        SELECT c.id, c.name, u.id AS uid, u.name AS uname, u.age, u.email
        FROM company c
                 JOIN sys_user u ON c.id = u.company_id
        WHERE c.id = #{id}
    </select>
</mapper>